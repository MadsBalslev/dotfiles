# This is Git's per-user configuration file.
[init]
	defaultBranch = main

[color]

  # Use colors in Git commands that are capable of colored output when
	# outputting to the terminal. (This is the default setting in Git â‰¥ 1.8.4.)
	ui = auto

[color "branch"]

  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]

  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = nvim

[user]
  name = Mads Balslev
  email = madspbalslev@gmail.com

[includeIf "gitdir/i:~/dev/github/trifork/"]
  path = ~/dev/github/trifork/.gitconfig

[includeIf "gitdir/i:~/dev/github/madsbalslev/"]
  path = ~/dev/github/madsbalslev/.gitconfig
[fetch]
	prune = true
